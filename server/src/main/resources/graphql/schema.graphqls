type Query{
    getUserLoginInfo(userName: String): UserLoginInfo
    getFeedBackInfo(location: String): [FeedBackInfo]
    getLocationInfoByName(name: String): LocationInfo
}

type Mutation{
    addUser(userLoginInfo: UserLoginInfoIp): Boolean
    addFeedback(feedBackInfo: FeedBackInfoInput): FeedBackInfo
    addLocation(locationInfo: LocationInfoInput): LocationInfo
}


input UserLoginInfoIp{
    firstName: String!
    lastName: String!
    email: String!
    phoneNo: Int!
    password: String!
}

type UserLoginInfo{
    firstName: String!
    lastName: String!
    email: String!
    phoneNo: Int!
    password: String!
}

enum Rating {
    FIVE_STARS,
    FOUR_STARS
    THREE_STARS,
    TWO_STARS,
    ONE_STAR
}

type FeedBackInfo{
    userName: String,
    feedbackMessage: String,
    location: Location
    rating: Rating
}
input FeedBackInfoInput{
    userName: String,
    feedbackMessage: String,
    location: Location
    rating: Rating
}

type LocationInfo{
    name: String!,
    email: String!,
    phone: Int!,
    address: String!
}

input LocationInfoInput{
    name: String!,
    email: String!,
    phone: Int!,
    address: String!
}

